# Fonts {{{ Font family. You can also specify different fonts for the
# bold/italic/bold-italic variants. By default they are derived automatically,
# by the OSes font system. Setting them manually is useful for font families that have many weight variants like Book, Medium, Thick, etc. For example: You can get a list of full family names available on your computer by running
# kitty list-fonts
# The default values shown below rely on your OS to choose an appropriate monospace font family.
# font_family        JetBrainsMono Nerd Font Mono
# bold_font          auto
# italic_font        Operator Mono Bold Italic
# bold_italic_font   auto

# font_family      JetBrainsMono Nerd Font Mono
# bold_font        JetBrainsMono Nerd Font Mono Extra Bold
# bold_italic_font JetBrainsMono Nerd Font Mono Extra Bold Italic


# Colors
include ./gruvbox.conf
# include ./catppuccin.conf
# include ./rose-pine.conf

cursor_shape block
cursor_blink_interval 1
shell_integration no-cursor

map ctrl+2 goto_tab 2
map ctrl+3 goto_tab 3
map ctrl+4 goto_tab 4
map ctrl+5 goto_tab 5
map ctrl+6 goto_tab 6
map ctrl+7 goto_tab 7
map ctrl+8 goto_tab 8
map ctrl+9 goto_tab 9

# Font size (in pts)
# NOTE: Do not use odd values as these affect how kitty renders margin
font_size 10

hide_window_decorations titlebar-only
window_padding_width 5

enable_audio_bell no

dynamic_background_opacity yes

map ctrl+shift+w none

# BEGIN_KITTY_FONTS
font_family      family='JetBrainsMono Nerd Font Mono'
postscript_name=JetBrainsMonoNFM-Regular
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

background_opacity 0.95

dynamic_background_opacity yes
